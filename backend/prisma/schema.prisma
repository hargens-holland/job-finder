generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  profile   Profile?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])

  fullName        String
  birthDate       DateTime?
  education       String?
  location        String?
  desiredRole     String?
  desiredLocation String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  skills          Skill[]
  projects        Project[]
  experiences     Experience[]
  activities      Activity[]
}

model Skill {
  id        String   @id @default(uuid())
  name      String

  profileId String
  profile   Profile @relation(fields: [profileId], references: [id])
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String

  profileId   String
  profile     Profile @relation(fields: [profileId], references: [id])
}

model Experience {
  id          String   @id @default(uuid())
  company     String
  role        String
  description String
  startDate   DateTime
  endDate     DateTime?

  profileId   String
  profile     Profile @relation(fields: [profileId], references: [id])
}

model Activity {
  id          String   @id @default(uuid())
  name        String
  role        String?
  description String?

  profileId   String
  profile     Profile @relation(fields: [profileId], references: [id])
}